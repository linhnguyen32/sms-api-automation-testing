  "item": [
    {
      "name": "Module 1 - Authentication",
      "item": [
        { "name": "01 Login", "request": { "method": "POST", "header": [{ "key": "Content-Type", "value": "application/json" }], "url": { "raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth","login"] }, "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\n  \"username\": \"student01\",\n  \"password\": \"123456\"\n}" }, "url": { "raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth","login"] } }}},
        { "name": "02 Logout", "request": { "method": "POST", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "url": { "raw": "{{base_url}}/auth/logout", "host": ["{{base_url}}"], "path": ["auth","logout"] } }},
        { "name": "03 Register", "request": { "method": "POST", "body": { "mode": "raw", "raw": "{ \"username\": \"student02\", \"email\": \"sv02@test.com\", \"password\": \"123456\" }" }, "url": { "raw": "{{base_url}}/auth/register", "host": ["{{base_url}}"], "path": ["auth","register"] } }},
        { "name": "04 Refresh Token", "request": { "method": "POST", "body": { "mode": "raw", "raw": "{ \"refreshToken\": \"{{refresh_token}}\" }" }, "url": { "raw": "{{base_url}}/auth/refresh-token", "host": ["{{base_url}}"], "path": ["auth","refresh-token"] } }},
        { "name": "05 Forgot Password", "request": { "method": "POST", "body": { "mode": "raw", "raw": "{ \"email\": \"student01@test.com\" }" }, "url": { "raw": "{{base_url}}/auth/forgot-password", "host": ["{{base_url}}"], "path": ["auth","forgot-password"] } }},
        { "name": "06 Reset Password", "request": { "method": "POST", "body": { "mode": "raw", "raw": "{ \"token\": \"reset_token\", \"newPassword\": \"new123456\" }" }, "url": { "raw": "{{base_url}}/auth/reset-password", "host": ["{{base_url}}"], "path": ["auth","reset-password"] } } }
      ]
    },

